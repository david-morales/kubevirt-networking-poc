# Use Python 3.9 on UBI 8 as a parent image
FROM registry.access.redhat.com/ubi8/python-39

# Set the working directory in the container to /app
WORKDIR /app

# Install necessary packages
RUN yum install -y wget tar gzip

# Download and install MongoDB Shell
RUN wget https://downloads.mongodb.com/db-shell/db-shell-linux-x86_64-rhel80-1.0.0.tgz
RUN tar -zxvf db-shell-linux-x86_64-rhel80-1.0.0.tgz
RUN mv mongodb-linux-x86_64-rhel80-1.0.0/bin/mongosh /usr/local/bin/

# Clean up
RUN yum clean all
RUN rm -f db-shell-linux-x86_64-rhel80-1.0.0.tgz

# Copy the requirements file into the container
COPY requirements.txt .

# Install the required packages
RUN pip install --no-cache-dir -r requirements.txt

# Copy the application code
COPY app.py .

# Expose the application port
EXPOSE 8080

# Run the application
CMD ["python", "app.py"]
