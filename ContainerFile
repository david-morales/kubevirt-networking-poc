# Use the official Python base image
FROM python:3.9-slim

# Set the working directory
WORKDIR /app

# Copy the requirements file into the container
COPY requirements.txt .

# Install the required packages
RUN pip install --no-cache-dir -r requirements.txt

# Create certificates directory
RUN mkdir ./certificates

# Copy the certificate files
COPY /certificates/tls.crt ./certificates
COPY /certificates/tls.key ./certificates
COPY /certificates/ca.crt ./certificates

# Rename ca.crt to ca.pem
RUN mv ./certificates/ca.crt ./certificates/ca.pem

# Set permissions for certificates
RUN chmod 644 ./certificates/*

# Concatenate the certificate and key into a single PEM file
RUN cat ./certificates/tls.crt ./certificates/tls.key > ./certificates/tls.pem

# Copy the application code
COPY app.py .

# Expose the application port
EXPOSE 8080

# Run the application
CMD ["python", "app.py"]
